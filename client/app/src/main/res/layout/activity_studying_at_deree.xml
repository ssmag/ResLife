<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:parentActivityName="com.example.kostas.reslife.activities.MainActivity"
    tools:context="com.example.kostas.reslife.activities.StudyingAtDereeActivity"
    android:background="@drawable/background2">

   <!-- <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/studydereeimageview"
            android:background="@null"
            android:clickable="false"
            android:src="@drawable/studyingatdereetitle" />

        <ScrollView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="500dp">


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/predepartureguide"
                android:onClick="PreDepartureGuide"
                android:src="@drawable/pre_departure_guide_drawable"
                android:background="@null" />
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/arrivalchecklist"
                android:onClick="ArrivalChecklist"
                android:src="@drawable/arrival_checklist_drawable"
                android:background="@null" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/campusservices"
                android:onClick="CampusServices"
                android:text="Campus Services"
                android:textColor="#ffffff"
                android:textColorHighlight="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="18dp"
                android:src="@drawable/campus_services_drawable"
                android:background="@null" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/buyingbooks"
                android:onClick="BuyingBooks"
                android:background="@null"
                android:text="Buying Books"
                android:textColor="#ffffff"
                android:textColorHighlight="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="18dp"
                android:src="@drawable/buying_books_drawable" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/registrationgrades"
                android:onClick="RegistrationGrades"
                android:background="@null"
                android:text="Registration Grades"
                android:textColor="#ffffff"
                android:textColorHighlight="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="18dp"
                android:src="@drawable/registration_grades_transcripts_drawable" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/residencepermit"
                android:onClick="ResidencePermit"
                android:background="@null"
                android:text="Residence Permit"
                android:textColor="#ffffff"
                android:textColorHighlight="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="18dp"
                android:src="@drawable/residence_permit_drawable" />

        </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>
