<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kostas.reslife.activities.TravellingInGreeceActivity"
    android:parentActivityName="com.example.kostas.reslife.activities.MainActivity"
    android:background="@drawable/background2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/travellinginggreeceimageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/travellingingreecetitle"
            android:background="@null" />

        <ScrollView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="500dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/transportation"
                    android:onClick="TransportationBTN"
                    android:background="@null"
                    android:src="@drawable/transportation_drawable" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/regionaltravel"
                    android:onClick="RegionalTravelBTN"
                    android:background="@null"
                    android:src="@drawable/regional_travel_drawable" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/losingpassport"
                    android:onClick="LosingaPassportBTN"
                    android:background="@null"
                    android:src="@drawable/losing_a_passport_drawable" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/shoppinginathens"
                    android:onClick="ShoppingInAthensBTN"
                    android:background="@null"
                    android:src="@drawable/shopping_in_athens_drawable" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/athensmustsees"
                    android:onClick="AthensMustSees"
                    android:background="@null"
                    android:src="@drawable/athens_must_sees_drawable" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/archaelogicalsites"
                    android:onClick="AthensArchaeologicalSites"
                    android:background="@null"
                    android:src="@drawable/athens_archaeological_drawable" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/experiencingingreece"
                    android:onClick="ExperiencingGreece"
                    android:background="@null"
                    android:src="@drawable/experiencing_greece_drawable" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>
